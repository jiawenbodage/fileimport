{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "esnext"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
        },
    },
    "include": [
        "src/**/*.ts",
    ]
}
